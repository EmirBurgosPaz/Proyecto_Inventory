<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_toolbar"
        android:background="@color/colorPrimary"
        ></android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:gravity="center"
        android:textStyle="italic|bold"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_edit_name"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:text="Nombre: "/>

        <EditText
            android:id="@+id/edit_first_name_dialog"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"/>

        <TextView
            android:id="@+id/txt_edit_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textStyle="italic|bold"
            android:text="Apellido: " />

        <EditText
            android:id="@+id/edit_last_name_dialog"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:text="Direcci贸n: "/>

        <EditText
            android:id="@+id/edit_address_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/txt_em"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:text="E-mail: "/>

        <EditText

            android:id="@+id/edit_email_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <CheckBox
            android:id="@+id/chk_e_mail_edit_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:focusableInTouchMode="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_edit_phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:text="Telef贸no 1: "/>

        <EditText
            android:id="@+id/edit_phone1_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:inputType="phone" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_pho2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:text="Telef贸no 2:" />
        <EditText

            android:id="@+id/edit_phone2_dialog"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:focusableInTouchMode="false"
            android:maxLength="11"
            android:inputType="phone"
            />

        <CheckBox
            android:id="@+id/chk_phone2_edit_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone2"
            />
        <TextView
            android:id="@+id/txt_pho3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic|bold"
            android:text="    Telef贸no 3: "/>

        <EditText

            android:id="@+id/edit_phone3_dialog"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:maxLength="11"
            android:inputType="phone" />

        <CheckBox
            android:id="@+id/chk_phone3_edit_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/button_cancel"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"/>
    </LinearLayout>

</LinearLayout>